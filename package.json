{
  "name": "todadot",
  "version": "1.2.0-beta",
  "description": "ToDaDot - 아이젠하워 매트릭스 투두리스트를 갖춘 Electron 데스크탑 앱",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "build": "vite build && electron-builder",
    "build:web": "vite build",
    "preview:web": "vite preview",
    "build:portable": "npm run prebuild:clean && npm run electron:build:main && vite build && electron-builder --win portable",
    "build:mac": "npm run prebuild:clean && npm run electron:build:main && vite build && electron-builder --mac --x64 --arm64",
    "build:mac:dmg": "npm run prebuild:clean && npm run electron:build:main && vite build && electron-builder --mac dmg --x64 --arm64",
    "build:mac:zip": "npm run prebuild:clean && npm run electron:build:main && vite build && electron-builder --mac zip --x64 --arm64",
    "prebuild:clean": "node scripts/pre-build-clean.cjs",
    "preview": "vite preview",
    "electron:dev": "npm run electron:build:main && concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build:main": "node -e \"const os=require('os');const {execSync}=require('child_process');const isWin=os.platform()==='win32';execSync(isWin?'powershell -ExecutionPolicy Bypass -File electron/build.ps1':'bash electron/build.sh',{stdio:'inherit'})\"",
    "electron:build:app": "vite build && electron-builder",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "todo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/html2canvas": "^0.5.35",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "asar": "^3.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "firebase": "^12.6.0",
    "googleapis": "^168.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.560.0",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-image-crop": "^11.0.10",
    "uuid": "^13.0.0",
    "zustand": "^5.0.9"
  },
  "build": {
    "appId": "com.todadot.app",
    "productName": "ToDaDot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "executableName": "ToDaDot",
      "icon": "icon.png",
      "appId": "com.todadot.app",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "ToDaDot-${version}-portable.exe",
      "requestExecutionLevel": "user"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ToDaDot",
      "artifactName": "ToDaDot Setup ${version}.exe",
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "protocols": [
        {
          "name": "todadot",
          "schemes": [
            "todadot"
          ]
        }
      ],
      "extendInfo": {
        "NSHumanReadableCopyright": "Copyright © 2025 ToDaDot",
        "NSHighResolutionCapable": true,
        "NSSupportsAutomaticGraphicsSwitching": true
      }
    },
    "dmg": {
      "title": "ToDaDot ${version}",
      "icon": "icon.png",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "extraFiles": [
      {
        "from": "build/resources/vc_redist.x64.exe",
        "to": "vc_redist.x64.exe",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
